{
  "name": "current-song-to-slack",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "email": "code@christophervachon.com",
    "name": "Christopher Vachon",
    "url": "https://christophervachon.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeVachon/current-song-to-slack"
  },
  "bin": {
    "build-nightly": "./dist/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "start": "yarn build && node dist/index.js",
    "clean": "rm -fr dist pkg",
    "build": "tsc",
    "package": "pkg . ",
    "full": "yarn clean && yarn build && yarn package"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf",
      "lib/**/*.js"
    ],
    "targets": [
      "node16-macos-x64"
    ],
    "outputPath": "pkg"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "chalk": "^4.1.2",
    "dayjs": "^1.10.7",
    "execa": "^5.1.1",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.0",
    "ms": "^2.1.3",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@44north/prettier-config": "^1.1.0",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.1.3",
    "@types/ms": "^0.7.31",
    "@types/node": "^16.11.7",
    "@types/yargs": "^17.0.5",
    "pkg": "^5.4.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
